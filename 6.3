    switch (x.operation){
        case '-':
            cout  << x.a <<  " " << x.operation << " " << x.b<< " = " << x.a-x.b<<  endl;
            break;
        case '+':
            cout  << x.a <<  " " << x.operation << " " << x.b<< " = " << x.a + x.b<<  endl;
            break;
        case '*':
            cout  << x.a <<  " " << x.operation << " " << x.b<< " = " << x.a*x.b<<  endl;
            break;
        case ':':
            if (x.b==0)
            {
                cout << "error: it is impossible to divide by zero!" << endl;
            }
            else
            {
                cout << x.a << " " << x.operation << " " << x.b << " = " << x.a / x.b << endl;
            }
            break;

    }


}

